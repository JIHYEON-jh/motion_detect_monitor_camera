<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="111dp"
        android:layout_height="40dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="23dp"
        app:layout_constraintBottom_toTopOf="@+id/nightText"
        app:layout_constraintEnd_toStartOf="@+id/settingView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmView_motion"
        app:srcCompat="@android:drawable/ic_menu_preferences" />

    <TextView
        android:id="@+id/settingView"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="21dp"
        android:text="설정"
        android:textColor="#3284C5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nightText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/alarmView_motion" />

    <ToggleButton
        android:id="@+id/nightBtn"
        android:layout_width="95dp"
        android:layout_height="57dp"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-black"
        android:text="ToggleButton"
        android:textColor="#1C36C8"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/logBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nightText" />

    <TextView
        android:id="@+id/nightText"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="24dp"
        android:text="야간모드"
        android:textColor="#6C6B6B"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/logText"
        app:layout_constraintEnd_toStartOf="@+id/nightBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/logBtn"
        android:layout_width="99dp"
        android:layout_height="63dp"
        android:layout_marginEnd="193dp"
        android:fontFamily="sans-serif-black"
        android:text="Confirm"
        android:textColor="#1C36C8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logText"
        app:layout_constraintTop_toTopOf="@+id/logText" />

    <TextView
        android:id="@+id/logText"
        android:layout_width="99dp"
        android:layout_height="59dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="49dp"
        android:text="Log"
        android:textColor="#6C6B6B"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nightText" />

    <TextView
        android:id="@+id/alarmView_motion"
        android:layout_width="356dp"
        android:layout_height="55dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/settingView"
        app:layout_constraintStart_toEndOf="@+id/settingView"
        app:layout_constraintTop_toBottomOf="@+id/alarmView_person" />

    <WebView
        android:id="@+id/webcam_view"
        android:layout_width="372dp"
        android:layout_height="249dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/alarmView_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/alarmView_person"
        android:layout_width="354dp"
        android:layout_height="58dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/alarmView_motion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/webcam_view" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="389dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="HomeMotionCCTV"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#0260AC"
        android:textSize="46sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/webcam_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>